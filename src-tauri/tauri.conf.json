{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:11420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "摸云 Safe and sound - Mo yun",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "http": {
        "scope": ["http://**/", "https://**/"]
      },
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "scope": ["$APPDATA/*"],
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true
      }
    },
    "bundle": {
      "windows": {
        "webviewInstallMode": {
          "type": "downloadBootstrapper"
        },
        "wix": {
          "language": "zh-CN"
        }
      },
      "active": true,
      "targets": "all",
      "identifier": "com.example.moyun",
      "icon": [
        "../public/img/icons/192x192.png",
        "../public/img/icons/192x192.png",
        "../public/img/icons/512x512.png",
        "icons/icon.icns",
        "../public/favicon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "摸云 Safe and sound - Mo yun",
        "width": 1024,
        "height": 768,
        "minWidth": 1024,
        "minHeight": 768,
        "center": true
      }
    ]
  }
}
